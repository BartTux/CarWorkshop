@model CarWorkshop.Application.Models.CarWorkshopServiceDTO;

<!-- Modal -->
<div class="modal fade" id="getCarWorkshopServiceModal" tabindex="-1" role="dialog" aria-labelledby="getCarWorkshopServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="getCarWorkshopServiceModalLabel">Service details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p>Description: @Model.Description</p>
                <p>Category: @Model.Category</p>

                @if (!string.IsNullOrEmpty(@Model.DetailedDescription))
                {
                    <p>Details: @Model.DetailedDescription</p>
                }

                <p>Service Cost: $@Model.Cost</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
