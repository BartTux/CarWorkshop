@model List<Post>
@{
    ViewData["Title"] = "About";
}

<h1 class="mb-4">@ViewData["Title"]</h1>
<div class="alert alert-success">Some description Message</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
    @foreach(var post in Model)
    {
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>
                    <p class="card-text">@post.Description</p>
                </div>
                <div class="card-body">
                    @foreach(var tag in post.Tags) 
                    { 
                        <span class="text-muted" style="margin-right: 3px; font-size: 12px;">@tag</span> 
                    }
                </div>
            </div>
        </div>
    }   
</div>

<div class="container text-center mt-5">
    <div class="row">
        <div class="col-sm-2 border">Column</div>
        <div class="col-sm-4 border">Column</div>
        <div class="col-sm-3 border">Column</div>
        <div class="col-sm-3 border">Column</div>
    </div>
</div>
